@startuml Profile Domain Model

class Profile <<AggregateRoot>> {
    +Guid ProfileId
    +string ProfileName
    +Guid AccountId
    +ProfileType ProfileType
    +bool IsDefault
    +string AvatarUrl
    +string Preferences
    +Guid OwnerUserId
    --
    +Create(): Profile
    +Update(): void
    +UpdateAvatar(): void
    +UpdatePreferences(): void
    +Share(): void
    +SetAsDefault(): void
}

class ProfileShare <<Entity>> {
    +Guid ShareId
    +Guid ProfileId
    +Guid SharedWithUserId
    +PermissionLevel Permission
}

enum ProfileType {
    Personal
    Project
    Department
    Team
}

enum PermissionLevel {
    View
    Edit
    Admin
}

Profile "1" *-- "many" ProfileShare

@enduml
